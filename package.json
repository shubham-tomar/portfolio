{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "A modern, responsive portfolio website built with vanilla JavaScript and Tailwind CSS. This project features a clean separation of concerns, modular JavaScript architecture, and support for animations and 3D effects.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "tailwindcss -i ./css/main.css -o ./css/main-output.css && tailwindcss -i ./css/themes.css -o ./css/themes-output.css",
    "watch:css": "tailwindcss -i ./css/main.css -o ./css/main-output.css --watch & tailwindcss -i ./css/themes.css -o ./css/themes-output.css --watch",
    "dev": "npm run watch:css",
    "serve": "vite --open"
  },
